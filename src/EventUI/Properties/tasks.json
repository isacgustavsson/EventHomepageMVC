{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch .NET Project",
            "type": "shell",
            "command": "dotnet watch run --project ${workspaceFolder}/${config:dotnetProjectPath}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
